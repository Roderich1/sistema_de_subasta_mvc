@model sistema_de_subasta_mvc.Models.ProductoViewModel

@{
    ViewData["Title"] = "Publicar Producto";
}

<div class="container py-4">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Publicar Producto</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }

                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Categoria" class="form-label">Categoría</label>
                        <select asp-for="Categoria" class="form-select">
                            <option value="">Seleccione...</option>
                            <option value="Electrónicos">Electrónicos</option>
                            <option value="Ropa">Ropa</option>
                            <option value="Hogar">Hogar</option>
                        </select>
                        <span asp-validation-for="Categoria" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Tipo" class="form-label">Tipo</label>
                        <select asp-for="Tipo" class="form-select" id="tipoVenta">
                            <option value="ventaDirecta">Venta Directa</option>
                            <option value="subasta">Subasta</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                </div>

                <!-- Campos para Venta Directa -->
                <div id="ventaDirectaFields">
                    <div class="mb-3">
                        <label asp-for="Precio" class="form-label">Precio</label>
                        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>

                <!-- Campos para Subasta -->
                <div id="subastaFields" style="display: none;">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="PrecioInicial" class="form-label">Precio Inicial</label>
                            <input asp-for="PrecioInicial" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="PrecioInicial" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="IncrementoMinimo" class="form-label">Incremento Mínimo</label>
                            <input asp-for="IncrementoMinimo" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="IncrementoMinimo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="PrecioReserva" class="form-label">Precio de Reserva</label>
                            <input asp-for="PrecioReserva" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="PrecioReserva" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="FechaFin" class="form-label">Fecha de Finalización</label>
                            <input asp-for="FechaFin" type="datetime-local" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="FechaFin" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Condicion" class="form-label">Condición</label>
                    <select asp-for="Condicion" class="form-select">
                        <option value="">Seleccione...</option>
                        <option value="nuevo">Nuevo</option>
                        <option value="usado">Usado</option>
                        <option value="reparado">Reparado</option>
                    </select>
                    <span asp-validation-for="Condicion" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Publicar</button>
                    <a asp-action="MisProductos" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('tipoVenta').addEventListener('change', function () {
            const ventaDirectaFields = document.getElementById('ventaDirectaFields');
            const subastaFields = document.getElementById('subastaFields');

            if (this.value === 'subasta') {
                ventaDirectaFields.style.display = 'none';
                subastaFields.style.display = 'block';
            } else {
                ventaDirectaFields.style.display = 'block';
                subastaFields.style.display = 'none';
            }
        });
    </script>
}