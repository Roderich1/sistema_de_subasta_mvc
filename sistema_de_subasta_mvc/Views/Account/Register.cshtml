@model sistema_de_subasta_mvc.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registro";
    Layout = "_AuthLayout";
}

<div class="p-5">
    <h2 class="text-center mb-4">Registro de Usuario</h2>

    <form asp-action="Register" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="row g-3">
            <!-- Primera fila -->
            <div class="col-md-6">
                <label asp-for="Username" class="form-label">Usuario</label>
                <input asp-for="Username" class="form-control form-control-lg" placeholder="Ingrese nombre de usuario" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="correo@ejemplo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Segunda fila -->
            <div class="col-md-6">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <input asp-for="Password" class="form-control form-control-lg" placeholder="********" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Nombre" class="form-label">Nombre Completo</label>
                <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ingrese nombre completo" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Teléfono -->
            <div class="col-12">
                <label asp-for="Telefono" class="form-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control form-control-lg" placeholder="Ingrese número de teléfono" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <!-- Sección de dirección -->
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Información de Dirección</h5>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Calle" class="form-label">Calle y Número</label>
                                <input asp-for="Calle" class="form-control form-control-lg" placeholder="Ingrese dirección completa" />
                                <span asp-validation-for="Calle" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Ciudad" class="form-label">Ciudad</label>
                                <input asp-for="Ciudad" class="form-control form-control-lg" placeholder="Ingrese ciudad" />
                                <span asp-validation-for="Ciudad" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CodigoPostal" class="form-label">Código Postal</label>
                                <input asp-for="CodigoPostal" class="form-control form-control-lg" placeholder="Ingrese código postal" />
                                <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 mt-4">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Registrarse</button>
                </div>
            </div>

            <div class="col-12 text-center mt-3">
                <span>¿Ya tienes una cuenta?</span>
                <a asp-action="Login" class="text-decoration-none">Iniciar Sesión</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}